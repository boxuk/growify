        <script>
            window.setInterval(function() {
                var box = $(".alert_class");
                var id  = $(box).attr("id");
                if(id == "red") {
                    $(box).attr("id", "whiteish");
                    return false;
                } else {
                    $(box).attr("id", "red");
                    return false;
                }
            }, 750);

        </script>



