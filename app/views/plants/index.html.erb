

<h2>Listing plants</h2>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Moisture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr class="plantclass">
        <td><%= plant.name %></td>
        <td><%= plant.moisture_level %>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

